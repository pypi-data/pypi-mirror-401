# IMGWTools Configuration
# Copy this file to .env and adjust values as needed

# Environment: development, production
IMGW_ENV=development

# API Server
IMGW_HOST=0.0.0.0
IMGW_PORT=8000

# API Keys file path (JSON file with API keys)
IMGW_API_KEYS_FILE=./api_keys.json

# Rate limiting (requests per hour per key, 0 = unlimited)
IMGW_RATE_LIMIT=100

# Data directory (for station metadata, shapefiles)
IMGW_DATA_DIR=./data

# Logging level: DEBUG, INFO, WARNING, ERROR
IMGW_LOG_LEVEL=INFO
