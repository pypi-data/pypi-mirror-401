# MDSA Framework - Environment Configuration Template
# ==================================================
# IMPORTANT: Copy this file to .env and set secure values
# DO NOT commit the .env file to version control

# =================================================================
# SECURITY CONFIGURATION (REQUIRED - No defaults allowed)
# =================================================================

# Admin Authentication
MDSA_ADMIN_USERNAME=admin
MDSA_ADMIN_PASSWORD=StrongPass!2025 # REQUIRED: Set a strong password (minimum 12 characters)
                       # Example: MySecurePassword123!@#

# JWT Token Security
MDSA_JWT_SECRET=9F3A7C2B1D4E5F60718293A4B5C6D7E8F9A0B1C2D3E4F5061728394050607081  # REQUIRED: Generate with: openssl rand -hex 32
                  # Example: a1b2c3d4e5f6...

# API Key Encryption
MDSA_ENCRYPTION_KEY=ABCDEF1234567890ABCDEF1234567890ABCDEF1234567890ABCDEF1234567890  # REQUIRED: Generate with: openssl rand -hex 32
                      # Example: f6e5d4c3b2a1...

# =================================================================
# DASHBOARD CONFIGURATION (Optional)
# =================================================================

# Dashboard Port (default: 9000)
MDSA_DASHBOARD_PORT=9000

# WebSocket Port (default: 9100)
MDSA_DASHBOARD_WS_PORT=9100

# =================================================================
# RAG & KNOWLEDGE BASE (Optional)
# =================================================================

# Knowledge Base Path
# Options:
#   - 'auto' : Auto-detect platform (MedCode, generic chatbot, or MDSA default)
#   - Custom path: /path/to/your/knowledge_base
MDSA_KNOWLEDGE_BASE_PATH=auto

# =================================================================
# GENERATION INSTRUCTIONS
# =================================================================
#
# To generate secure secrets:
#
# On Windows (PowerShell):
#   $bytes = New-Object byte[] 32
#   [Security.Cryptography.RNGCryptoServiceProvider]::Create().GetBytes($bytes)
#   [BitConverter]::ToString($bytes).Replace('-','').ToLower()
#
# On Linux/Mac:
#   openssl rand -hex 32
#
