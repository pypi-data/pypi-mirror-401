# Medical Chatbot Example - Environment Configuration
# Copy this file to .env and customize as needed

# === Ollama Configuration (Local Models) ===
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=deepseek-v3.1

# === Embedder Configuration ===
EMBEDDER_MODEL=sentence-transformers/all-MiniLM-L6-v2

# === Performance Settings ===
MAX_CACHE_SIZE=100
ENABLE_RESPONSE_CACHE=true
ENABLE_EMBEDDING_CACHE=true

# === Chatbot Settings ===
CHATBOT_HOST=0.0.0.0
CHATBOT_PORT=7860
CHATBOT_SHARE=false  # Set to true for public Gradio link

# === Dashboard Integration (Optional) ===
DASHBOARD_URL=http://localhost:9000
ENABLE_DASHBOARD_TRACKING=true

# === RAG Configuration ===
RAG_TOP_K=5
RAG_MIN_SCORE=0.5

# === Model Configuration ===
ROUTER_MODEL=prajjwal1/bert-tiny
REASONER_ENABLED=false  # Set to true to enable Phi-2 (requires 5GB extra RAM)
REASONER_MODEL=microsoft/phi-2

# === Logging ===
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
LOG_FILE=chatbot.log

# === Security (Production) ===
# Enable authentication in production
ENABLE_AUTH=false
API_KEY=your_api_key_here

# === Advanced Settings ===
DEVICE=cpu  # Change to 'cuda' for GPU acceleration
BATCH_SIZE=1
MAX_LENGTH=2048
