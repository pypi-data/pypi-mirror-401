{
    "name": "cssl",
    "displayName": "CSSL Language",
    "description": "Professional syntax highlighting, snippets, and language support for CSSL scripts (.cssl, .cssl-pl, .cssl-mod)",
    "version": "1.7.1",
    "publisher": "IncludeCPP",
    "icon": "images/cssl.png",
    "engines": {
        "vscode": "^1.60.0"
    },
    "categories": [
        "Programming Languages",
        "Snippets",
        "Debuggers"
    ],
    "keywords": [
        "cssl",
        "script",
        "includecpp",
        "c++",
        "python",
        "run"
    ],
    "activationEvents": [
        "onLanguage:cssl"
    ],
    "main": "./extension.js",
    "contributes": {
        "languages": [
            {
                "id": "cssl",
                "aliases": ["CSSL", "cssl"],
                "extensions": [".cssl"],
                "configuration": "./language-configuration.json",
                "icon": {
                    "light": "./images/cssl.png",
                    "dark": "./images/cssl.png"
                }
            },
            {
                "id": "cssl-mod",
                "aliases": ["CSSL Module", "cssl-mod"],
                "extensions": [".cssl-mod"],
                "configuration": "./language-configuration.json",
                "icon": {
                    "light": "./images/cssl_pl.png",
                    "dark": "./images/cssl_pl.png"
                }
            },
            {
                "id": "cssl-pl",
                "aliases": ["CSSL Payload", "cssl-pl"],
                "extensions": [".cssl-pl"],
                "configuration": "./language-configuration.json",
                "icon": {
                    "light": "./images/cssl_pl.png",
                    "dark": "./images/cssl_pl.png"
                }
            },
            {
                "id": "cp",
                "aliases": ["IncludeCPP Plugin", "cp"],
                "extensions": [".cp"],
                "configuration": "./language-configuration.json",
                "icon": {
                    "light": "./images/cssl.png",
                    "dark": "./images/cssl.png"
                }
            }
        ],
        "grammars": [
            {
                "language": "cssl",
                "scopeName": "source.cssl",
                "path": "./syntaxes/cssl.tmLanguage.json"
            },
            {
                "language": "cssl-mod",
                "scopeName": "source.cssl",
                "path": "./syntaxes/cssl.tmLanguage.json"
            },
            {
                "language": "cssl-pl",
                "scopeName": "source.cssl",
                "path": "./syntaxes/cssl.tmLanguage.json"
            },
            {
                "language": "cp",
                "scopeName": "source.cssl",
                "path": "./syntaxes/cssl.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "cssl",
                "path": "./snippets/cssl.snippets.json"
            },
            {
                "language": "cssl-mod",
                "path": "./snippets/cssl.snippets.json"
            },
            {
                "language": "cssl-pl",
                "path": "./snippets/cssl.snippets.json"
            }
        ],
        "commands": [
            {
                "command": "cssl.runFile",
                "title": "Run CSSL File",
                "icon": "$(play)",
                "enablement": "resourceExtname == .cssl"
            }
        ],
        "menus": {
            "editor/title/run": [
                {
                    "command": "cssl.runFile",
                    "when": "resourceExtname == .cssl",
                    "group": "navigation"
                }
            ],
            "editor/context": [
                {
                    "command": "cssl.runFile",
                    "when": "resourceExtname == .cssl",
                    "group": "1_run"
                }
            ]
        },
        "keybindings": [
            {
                "command": "cssl.runFile",
                "key": "f5",
                "when": "resourceExtname == .cssl && !inDebugMode"
            },
            {
                "command": "cssl.runFile",
                "key": "ctrl+f5",
                "when": "resourceExtname == .cssl"
            }
        ],
        "taskDefinitions": [
            {
                "type": "cssl",
                "required": ["file"],
                "properties": {
                    "file": {
                        "type": "string",
                        "description": "The CSSL file to run"
                    }
                }
            }
        ],
        "configuration": {
            "title": "CSSL",
            "properties": {
                "cssl.pythonPath": {
                    "type": "string",
                    "default": "python",
                    "description": "Path to Python executable"
                },
                "cssl.showOutput": {
                    "type": "boolean",
                    "default": true,
                    "description": "Show output panel when running CSSL files"
                }
            }
        },
        "configurationDefaults": {
            "editor.tokenColorCustomizations": {
                "textMateRules": [
                    {
                        "scope": "storage.modifier.cssl",
                        "settings": {
                            "fontStyle": "italic"
                        }
                    },
                    {
                        "scope": "storage.modifier.extends.cssl",
                        "settings": {
                            "fontStyle": "italic"
                        }
                    },
                    {
                        "scope": "storage.modifier.overwrites.cssl",
                        "settings": {
                            "fontStyle": "italic"
                        }
                    },
                    {
                        "scope": "support.type.cssl",
                        "settings": {
                            "foreground": "#C586C0"
                        }
                    },
                    {
                        "scope": "variable.other.declaration.cssl",
                        "settings": {
                            "foreground": "#9CDCFE"
                        }
                    },
                    {
                        "scope": "variable.parameter.cssl",
                        "settings": {
                            "foreground": "#9CDCFE"
                        }
                    }
                ]
            }
        }
    }
}
