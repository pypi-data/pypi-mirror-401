<mujoco>
  <!-- Optional: set a default directory for relative texture paths -->
  <compiler texturedir="textures"/>

  <asset>
    <!-- Textures (PNG/JPG) -->
    <texture name="cube_tex"      type="2d" file="cube.png"/>
    <texture name="cylinder_tex"  type="2d" file="cylinder.png"/>
    <texture name="sphere_tex"    type="2d" file="sphere.png"/>
    <texture name="capsule_tex"   type="2d" file="capsule.png"/>
    <texture name="rectangle_tex" type="2d" file="rectangle.png"/>

    <!-- Materials pointing to textures -->
    <material name="cube_mat"      texture="cube_tex"      rgba="1 1 1 1"/>
    <material name="cylinder_mat"  texture="cylinder_tex"  rgba="1 1 1 1"/>
    <material name="sphere_mat"    texture="sphere_tex"    rgba="1 1 1 1"/>
    <material name="capsule_mat"   texture="capsule_tex"   rgba="1 1 1 1"/>
    <material name="rectangle_mat" texture="rectangle_tex" rgba="1 1 1 1"/>
  </asset>

  <worldbody>

    <!-- Cube Target (textured like the cube object) -->
    <body name="cube_target" pos="-0.75 0 0.2" quat="1 0 0 0">
      <freejoint name="cube_target_joint" />
      <!-- invisible ballast/anchor geom -->
      <geom type="box" size="0.01 0.01 0.01" mass="0.01" rgba="0 0 0 0" contype="1" conaffinity="15" />
      <!-- invisible marker -->
      <geom name="cube_target_geom" type="box" size="0.03 0.03 0.005" rgba="0 0 0 0" contype="0" conaffinity="0" />

      <!-- floor + walls share cube material -->
      <geom name="cube_target_floor" type="box" size="0.09 0.11 0.002" pos="0 0 0.002"
            material="cube_mat" contype="1" conaffinity="1" rgba="1 1 1 1"/>
      <geom name="cube_target_wall_north" type="box" size="0.09 0.001 0.04" pos="0 0.11 0.02"
            material="cube_mat" contype="1" conaffinity="1" rgba="1 1 1 1"/>
      <geom name="cube_target_wall_south" type="box" size="0.09 0.001 0.04" pos="0 -0.11 0.02"
            material="cube_mat" contype="1" conaffinity="1" rgba="1 1 1 1"/>
      <geom name="cube_target_wall_east"  type="box" size="0.001 0.11 0.04" pos="0.09 0 0.02"
            material="cube_mat" contype="1" conaffinity="1" rgba="1 1 1 1"/>
      <geom name="cube_target_wall_west"  type="box" size="0.001 0.11 0.04" pos="-0.09 0 0.02"
            material="cube_mat" contype="1" conaffinity="1" rgba="1 1 1 1"/>
    </body>

    <!-- Cylinder Target -->
    <body name="cylinder_target" pos="0 0 0" quat="1 0 0 0">
      <freejoint name="cylinder_target_joint" />
      <geom type="box" size="0.01 0.01 0.01" mass="0.01" rgba="0 0 0 0" contype="1" conaffinity="15" />
      <geom name="cylinder_target_geom" type="box" size="0.03 0.03 0.005" rgba="0 0 0 0" contype="0" conaffinity="0" />

      <geom name="cylinder_target_floor" type="box" size="0.09 0.11 0.002" pos="0 0 0.002"
            material="cylinder_mat" contype="1" conaffinity="1" rgba="1 1 1 1"/>
      <geom name="cylinder_target_wall_north" type="box" size="0.09 0.001 0.04" pos="0 0.11 0.02"
            material="cylinder_mat" contype="1" conaffinity="1" rgba="1 1 1 1"/>
      <geom name="cylinder_target_wall_south" type="box" size="0.09 0.001 0.04" pos="0 -0.11 0.02"
            material="cylinder_mat" contype="1" conaffinity="1" rgba="1 1 1 1"/>
      <geom name="cylinder_target_wall_east"  type="box" size="0.001 0.11 0.04" pos="0.09 0 0.02"
            material="cylinder_mat" contype="1" conaffinity="1" rgba="1 1 1 1"/>
      <geom name="cylinder_target_wall_west"  type="box" size="0.001 0.11 0.04" pos="-0.09 0 0.02"
            material="cylinder_mat" contype="1" conaffinity="1" rgba="1 1 1 1"/>
    </body>

    <!-- Sphere Target -->
    <body name="sphere_target" pos="0.75 0 0.2">
      <freejoint name="sphere_target_joint" />
      <geom type="box" size="0.01 0.01 0.01" mass="0.01" rgba="0 0 0 0" contype="1" conaffinity="15" />
      <geom name="sphere_target_geom" type="box" size="0.03 0.03 0.005" rgba="0 0 0 0" contype="0" conaffinity="0" />

      <geom name="sphere_target_floor" type="box" size="0.09 0.11 0.002" pos="0 0 0.002"
            material="sphere_mat" contype="1" conaffinity="1" rgba="1 1 1 1"/>
      <geom name="sphere_target_wall_north" type="box" size="0.09 0.001 0.04" pos="0 0.11 0.02"
            material="sphere_mat" contype="1" conaffinity="1" rgba="1 1 1 1"/>
      <geom name="sphere_target_wall_south" type="box" size="0.09 0.001 0.04" pos="0 -0.11 0.02"
            material="sphere_mat" contype="1" conaffinity="1" rgba="1 1 1 1"/>
      <geom name="sphere_target_wall_east"  type="box" size="0.001 0.11 0.04" pos="0.09 0 0.02"
            material="sphere_mat" contype="1" conaffinity="1" rgba="1 1 1 1"/>
      <geom name="sphere_target_wall_west"  type="box" size="0.001 0.11 0.04" pos="-0.09 0 0.02"
            material="sphere_mat" contype="1" conaffinity="1" rgba="1 1 1 1"/>
    </body>

    <!-- Capsule Target -->
    <body name="capsule_target" pos="0.2 -0.2 0.2" quat="1 0 0 0">
      <freejoint name="capsule_target_joint" />
      <geom type="box" size="0.01 0.01 0.01" mass="0.01" rgba="0 0 0 0" contype="1" conaffinity="15" />
      <geom name="capsule_target_geom" type="box" size="0.03 0.03 0.005" rgba="0 0 0 0" contype="0" conaffinity="0" />

      <geom name="capsule_target_floor" type="box" size="0.09 0.11 0.002" pos="0 0 0.002"
            material="capsule_mat" contype="1" conaffinity="1" rgba="1 1 1 1"/>
      <geom name="capsule_target_wall_north" type="box" size="0.09 0.001 0.04" pos="0 0.11 0.02"
            material="capsule_mat" contype="1" conaffinity="1" rgba="1 1 1 1"/>
      <geom name="capsule_target_wall_south" type="box" size="0.09 0.001 0.04" pos="0 -0.11 0.02"
            material="capsule_mat" contype="1" conaffinity="1" rgba="1 1 1 1"/>
      <geom name="capsule_target_wall_east"  type="box" size="0.001 0.11 0.04" pos="0.09 0 0.02"
            material="capsule_mat" contype="1" conaffinity="1" rgba="1 1 1 1"/>
      <geom name="capsule_target_wall_west"  type="box" size="0.001 0.11 0.04" pos="-0.09 0 0.02"
            material="capsule_mat" contype="1" conaffinity="1" rgba="1 1 1 1"/>
    </body>

    <!-- Rectangle Target -->
    <body name="rectangle_target" pos="0.2 0.2 0.2" quat="1 0 0 0">
      <freejoint name="rectangle_target_joint" />
      <geom type="box" size="0.01 0.01 0.01" mass="0.01" rgba="0 0 0 0" contype="1" conaffinity="15" />
      <geom name="rectangle_target_geom" type="box" size="0.03 0.05 0.005" rgba="0 0 0 0" contype="0" conaffinity="0" />

      <geom name="rectangle_target_floor" type="box" size="0.09 0.11 0.002" pos="0 0 0.002"
            material="rectangle_mat" contype="1" conaffinity="1" rgba="1 1 1 1"/>
      <geom name="rectangle_target_wall_north" type="box" size="0.09 0.001 0.04" pos="0 0.11 0.02"
            material="rectangle_mat" contype="1" conaffinity="1" rgba="1 1 1 1"/>
      <geom name="rectangle_target_wall_south" type="box" size="0.09 0.001 0.04" pos="0 -0.11 0.02"
            material="rectangle_mat" contype="1" conaffinity="1" rgba="1 1 1 1"/>
      <geom name="rectangle_target_wall_east"  type="box" size="0.001 0.11 0.04" pos="0.09 0 0.02"
            material="rectangle_mat" contype="1" conaffinity="1" rgba="1 1 1 1"/>
      <geom name="rectangle_target_wall_west"  type="box" size="0.001 0.11 0.04" pos="-0.09 0 0.02"
            material="rectangle_mat" contype="1" conaffinity="1" rgba="1 1 1 1"/>
    </body>

    <!-- Objects -->
    <body name="cube_obj" pos="-0.2 -0.2 0.84" quat="1 0 0 0">
      <freejoint name="object0:joint" />
      <geom name="object0_geom" type="box" size="0.03 0.03 0.03"
            material="cube_mat" rgba="1 1 1 1" mass="0.05"
            solimp="0.999 0.999 0.001" solref="0.001 1" friction="0.95 0.3 0.1" condim="4"
            conaffinity="9" contype="9" />
      <site name="object0" pos="0 0 0" size="0.02 0.02 0.02" rgba="0 0 0 0" type="sphere"/>
    </body>

    <body name="cylinder_obj" pos="-0.2 0.2 0.84" quat="1 0 0 0">
      <freejoint name="object1:joint" />
      <geom name="object1_geom" type="cylinder" size="0.03 0.04"
            material="cylinder_mat" rgba="1 1 1 1" mass="0.05"
            solimp="0.999 0.999 0.001" solref="0.001 1" friction="0.95 0.3 0.1" condim="4"
            conaffinity="9" contype="9" />
      <site name="object1" pos="0 0 0" size="0.02 0.02 0.02" rgba="0 0 0 0" type="sphere"/>
    </body>

    <body name="sphere_obj" pos="0.2 0 0.84" quat="1 0 0 0">
      <freejoint name="object2:joint" />
      <geom name="object2_geom" type="sphere" size="0.03"
            material="sphere_mat" rgba="1 1 1 1" mass="0.05"
            solimp="0.999 0.999 0.001" solref="0.001 1" friction="0.95 0.3 0.1" condim="4"
            conaffinity="9" contype="9" />
      <site name="object2" pos="0 0 0" size="0.02 0.02 0.02" rgba="0 0 0 0" type="sphere"/>
    </body>

    <body name="capsule_obj" pos="0.2 -0.2 0.84" quat="0.707 0.707 0 0">
      <freejoint name="object3:joint" />
      <geom name="object3_geom" type="capsule" size="0.025 0.03"
            material="capsule_mat" rgba="1 1 1 1" mass="0.05"
            solimp="0.999 0.999 0.001" solref="0.001 1" friction="0.95 0.3 0.1" condim="4"
            conaffinity="9" contype="9" />
      <site name="object3" pos="0 0 0" size="0.02 0.02 0.02" rgba="0 0 0 0" type="sphere"/>
    </body>

    <body name="rectangle_obj" pos="0.2 0.2 0.84" quat="0.707 0.707 0 0">
      <freejoint name="object4:joint" />
      <geom name="object4_geom" type="box" size="0.03 0.05 0.02"
            material="rectangle_mat" rgba="1 1 1 1" mass="0.05"
            solimp="0.999 0.999 0.001" solref="0.001 1" friction="0.95 0.3 0.1" condim="4"
            conaffinity="9" contype="9" />
      <site name="object4" pos="0 0 0" size="0.02 0.02 0.02" rgba="0 0 0 0" type="sphere"/>
    </body>

  </worldbody>

</mujoco>
