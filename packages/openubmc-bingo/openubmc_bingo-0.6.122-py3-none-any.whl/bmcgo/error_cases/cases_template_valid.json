{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Bingo Cases Schema",
  "description": "Schema for validating bingo cases configuration",
  "type": "object",
  "required": ["version", "cases"],
  "properties": {
    "version": {
      "type": "string",
      "description": "版本号，必须符合三段式版本格式",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "cases": {
      "type": "object",
      "description": "案例集合",
      "minProperties": 1,
      "patternProperties": {
        "^bingo_case_[0-9]{3,}$": {
          "type": "object",
          "required": ["title", "description", "matching_rules"],
          "properties": {
            "title": {
              "type": "string",
              "description": "案例标题",
              "minLength": 1
            },
            "description": {
              "type": "string",
              "description": "案例描述",
              "minLength": 1
            },
            "matching_rules": {
              "type": "array",
              "description": "匹配规则列表",
              "minItems": 1,
              "items": {
                "type": "object",
                "required": ["field", "operator", "value"],
                "properties": {
                  "field": {
                    "type": "string",
                    "description": "匹配字段",
                    "enum": ["message"]
                  },
                  "operator": {
                    "type": "string",
                    "description": "匹配操作符",
                    "enum": ["regex", "contains", "equals"]
                  },
                  "value": {
                    "type": "string",
                    "description": "匹配值",
                    "minLength": 1
                  }
                },
                "additionalProperties": false
              }
            },
            "solution": {
              "type": "string",
              "description": "解决方案"
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}