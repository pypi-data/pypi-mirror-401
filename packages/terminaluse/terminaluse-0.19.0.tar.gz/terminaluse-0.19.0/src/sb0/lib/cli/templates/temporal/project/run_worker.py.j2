import asyncio

from sb0.lib.core.temporal.activities import get_all_activities
from sb0.lib.core.temporal.workers.worker import Sb0Worker
from sb0.lib.utils.logging import make_logger
from sb0.lib.utils.debug import setup_debug_if_enabled
from sb0.lib.environment_variables import EnvironmentVariables

from project.workflow import {{ workflow_class }}


environment_variables = EnvironmentVariables.refresh()

logger = make_logger(__name__)


async def main():
    # Setup debug mode if enabled
    setup_debug_if_enabled()
    
    task_queue_name = environment_variables.WORKFLOW_TASK_QUEUE
    if task_queue_name is None:
        raise ValueError("WORKFLOW_TASK_QUEUE is not set")

    all_activities = get_all_activities() + []  # add your own activities here
    
    # Create a worker with automatic tracing
    worker = Sb0Worker(
        task_queue=task_queue_name,
    )

    await worker.run(
        activities=all_activities,
        workflow={{ workflow_class }},
    )

if __name__ == "__main__":
    asyncio.run(main()) 