# Deployment Configuration (Environment-specific values)
DEPLOYMENT: Development
LOG_LEVEL: DEBUG

# Global Navbar Definition with RBAC
ZNAVBAR:
  #> Public pages (no RBAC) <#
  zVaF: null
  zAbout: null

  #> Parent page with sub-items <#
  zProducts:
    zSub: [zCLI, zBifrost, zTheme, zTrivia]

  #> Admin-only pages <#
  zAccount:
    zRBAC:
      require_role: [zAdmin]

  #> Authenticated-only actions <#
  ^logout:
    zRBAC:
      authenticated: true

  #> Guest-only actions <#
  zRegister:
    zRBAC:
      authenticated: false

  ^zLogin:
    zRBAC:
      authenticated: false

# Static File Mounts (zPath Examples)
ZSERVER_MOUNTS:
  /bifrost/: /Users/galnachshon/Projects/zolo-zcli/bifrost/
  /ztheme/: /Users/galnachshon/Projects/zolo-zcli/zTheme/

# ============================================================================
# Database Configuration - zPath Syntax Examples
# ============================================================================
# Convention: ZDATA_{SCHEMA_NAME}_URL for auto-discovery
# Format: Use zPath syntax for workspace and user config paths:
#   @.Data                           - CSV in workspace Data/ folder
#   ~.zMachine.data/production.db    - SQLite in user config dir
#   postgresql://user:pass@host/db   - PostgreSQL with credentials

# Workspace-relative paths (@ prefix)
ZDATA_CONTACTS_URL: @.Data
ZDATA_USERS_URL: @.Data
ZDATA_ROLES_URL: @.Data
ZDATA_USER_ROLES_URL: @.Data
ZDATA_SERVICES_URL: @.Data
ZDATA_SUBSCRIPTIONS_URL: @.Data
ZDATA_API_KEYS_URL: @.Data
ZDATA_USER_FILES_URL: @.Data
ZDATA_POSTS_URL: @.Data
ZDATA_POST_MEDIA_URL: @.Data
ZDATA_VIDEOS_URL: @.Data
ZDATA_VIDEO_QUALITIES_URL: @.Data
ZDATA_CDN_CONFIG_URL: @.Data
ZDATA_CDN_INVALIDATIONS_URL: @.Data

# User config paths (~ prefix)
ZDATA_PRODUCTION_URL: ~.zMachine.data/production.db
ZDATA_BACKUP_URL: ~.zCloud.backups/latest.db

# Test Schemas
ZDATA_TEST_NOMIGRATION_URL: @.Data
ZDATA_TEST_MIGRATION_URL: @.Data

