# ============================================================================
# Server Configuration
# ============================================================================
# Development defaults
HTTP_HOST: localhost
HTTP_PORT: 5000
WEBSOCKET_HOST: localhost
WEBSOCKET_PORT: 8765

# Production overrides (SSL/TLS enabled)
# HTTP_SSL_ENABLED: true
# HTTP_SSL_CERT: certs/demo.cert
# HTTP_SSL_KEY: certs/demo.key
# WEBSOCKET_SSL_ENABLED: true
# WEBSOCKET_SSL_CERT: certs/demo.cert
# WEBSOCKET_SSL_KEY: certs/demo.key
# WEBSOCKET_REQUIRE_AUTH: true
# WEBSOCKET_ALLOWED_ORIGINS: https://yourdomain.com

# ============================================================================
# Environment-Specific Settings Examples
# ============================================================================
# Development Environment
DEV_DEBUG_MODE: true
DEV_LOG_LEVEL: DEBUG
DEV_ENVIRONMENT: Development

# Production Environment
PROD_DEBUG_MODE: false
PROD_LOG_LEVEL: PROD
PROD_ENVIRONMENT: Production

# Session Configuration
SESSION_LEVEL: SESSION
SESSION_TIMEOUT: 3600

# Info-level settings
INFO_LOGGING: INFO
INFO_VERBOSE: true

# Warning and Error settings
WARNING_THRESHOLD: WARNING
ERROR_HANDLER: ERROR
CRITICAL_ALERTS: CRITICAL

# ============================================================================
# Complex Data Structures (Testing all syntax)
# ============================================================================
# Nested objects
database_config:
  primary:
    url: @.Data/primary.db
    readonly: false
    pool_size: 10
  replica:
    url: ~.zCloud.replicas/replica1.db
    readonly: true
    pool_size: 5

# Arrays
supported_formats: [json, yaml, zolo, xml]
log_levels: [DEBUG, SESSION, INFO, WARNING, ERROR, CRITICAL, PROD]

# Mixed types
feature_flags:
  enable_websocket: true
  max_connections: 100
  timeout_seconds: 30.5
  fallback_mode: Development

# ============================================================================
# zPath Examples for Theme Testing
# ============================================================================
# These should all be highlighted in bright cyan (ANSI 51)
workspace_paths:
  data_dir: @.Data
  config_dir: @.Config
  logs_dir: @.Logs
  temp_dir: @.Temp

user_paths:
  config_home: ~.zCloud.config
  data_home: ~.zCloud.data
  cache_home: ~.zCloud.cache
  logs_home: ~.zCloud.logs
