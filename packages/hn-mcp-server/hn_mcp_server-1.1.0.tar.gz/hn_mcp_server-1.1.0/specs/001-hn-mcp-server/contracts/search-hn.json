{
  "tool": "search_hn",
  "description": "Search HackerNews content sorted by relevance, then points, then number of comments",
  "inputSchema": {
    "type": "object",
    "properties": {
      "query": {
        "type": "string",
        "description": "Full-text search query"
      },
      "tags": {
        "type": "array",
        "items": {
          "type": "string"
        },
        "description": "Filter tags (story, comment, poll, show_hn, ask_hn, front_page, author_USERNAME, story_ID)",
        "default": []
      },
      "page": {
        "type": "integer",
        "description": "Page number (0-indexed)",
        "minimum": 0,
        "default": 0
      },
      "hits_per_page": {
        "type": "integer",
        "description": "Results per page",
        "minimum": 1,
        "maximum": 1000,
        "default": 20
      },
      "numeric_filters": {
        "type": "array",
        "items": {
          "type": "string"
        },
        "description": "Numeric filters (e.g., 'points>100', 'created_at_i>1609459200')",
        "default": []
      }
    },
    "required": []
  },
  "outputSchema": {
    "type": "object",
    "properties": {
      "hits": {
        "type": "array",
        "items": {
          "type": "object"
        }
      },
      "page": {
        "type": "integer"
      },
      "nbHits": {
        "type": "integer"
      },
      "nbPages": {
        "type": "integer"
      },
      "hitsPerPage": {
        "type": "integer"
      },
      "processingTimeMS": {
        "type": "integer"
      },
      "query": {
        "type": "string"
      },
      "params": {
        "type": "string"
      }
    },
    "required": ["hits", "page", "nbHits", "nbPages", "hitsPerPage", "processingTimeMS", "query", "params"]
  },
  "examples": [
    {
      "input": {
        "query": "python",
        "tags": ["story"],
        "hits_per_page": 10
      },
      "description": "Search for Python-related stories, 10 results"
    },
    {
      "input": {
        "query": "machine learning",
        "tags": ["story", "show_hn"],
        "numeric_filters": ["points>50"]
      },
      "description": "Search for ML stories and Show HN posts with >50 points"
    },
    {
      "input": {
        "tags": ["front_page"]
      },
      "description": "Get current front page stories"
    }
  ]
}
