# local-test.recipe
# A simple recipe to test locally without remote servers

var MESSAGE = Hello from trainsh!
var SLEEP_TIME = 2

host local = local

# Open a local tmux session
tmux.open @local

# Run some local commands
@local > echo "$MESSAGE"
@local > echo "Current directory: $(pwd)"
@local > echo "Date: $(date)"

# Show some system info
@local > uname -a
@local > echo "Testing sleep for $SLEEP_TIME seconds..."

sleep ${SLEEP_TIME}s

@local > echo "Done sleeping!"

# Notify when complete
notify "Local test completed!"
tmux.close @local
