# Environment variables for {{ display_name }}
# Copy this file to .env and fill in your values

# Required: Google AI API key
# Get your key from: https://aistudio.google.com/app/apikey
GOOGLE_API_KEY=your_key_here

# Optional: Custom settings for your chatbot
# Define them in config.py first, then add values here:
# DEBUG_MODE=false

# --- Logging Configuration ---
# LOG_LEVEL=INFO               # DEBUG, INFO, WARNING, ERROR
# LOG_DIR=./logs               # Directory for log files
# LOG_FILENAME=                # Custom filename (default: auto with date)
{% if with_rag %}

# --- RAG Configuration ---
# Environment variables override values from config.yml.
# All RAG settings use the RAG_ prefix.

# Directory for ChromaDB vector store (default: ./chroma_db)
# RAG_CHROMA_DB_DIR=./chroma_db

# Directory for cached SSL certificates
# RAG_CERT_CACHE_DIR=~/.cache/macsdk/certs

# Indexing settings
# RAG_CHUNK_SIZE=1000
# RAG_CHUNK_OVERLAP=200
# RAG_MAX_DEPTH=3

# Retrieval settings
# RAG_RETRIEVER_K=6
# RAG_MAX_REWRITES=2
# RAG_TEMPERATURE=0.3
{% endif %}

# Note: This .env file is loaded automatically by Pydantic Settings
# for any fields defined in config.py
