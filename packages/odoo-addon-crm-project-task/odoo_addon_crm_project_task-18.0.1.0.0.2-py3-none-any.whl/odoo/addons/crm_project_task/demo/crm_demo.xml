<?xml version="1.0" encoding="utf-8" ?>
<odoo noupdate="1">
    <!-- Set Reasearch and Development as the default project for the main company -->
    <record id="base.main_company" model="res.company">
        <field name="crm_default_project_id" ref='project.project_project_2' />
    </record>

    <record id="crm_create_task_demo" model="crm.create.task">
        <field name="lead_id" ref="crm.crm_case_31" />
        <field name="task_name">Demo Task from Lead</field>
        <field name="description">This is a demo task created from a lead.</field>
    </record>
    <function
        model="crm.create.task"
        name="create_task"
        eval="[ref('crm_create_task_demo')]"
    />
</odoo>
