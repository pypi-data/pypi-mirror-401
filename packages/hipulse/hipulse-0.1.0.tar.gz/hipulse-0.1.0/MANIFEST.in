# Include essential files
include LICENSE
include README.md
include pyproject.toml

# Include source files
recursive-include src *.py

# Exclude development/test files from source distribution
exclude .gitignore
exclude .ruff_cache
prune tests
prune .git
prune .github
prune __pycache__
prune *.egg-info
prune dist
prune build
prune .venv
prune .pytest_cache
prune .mypy_cache

