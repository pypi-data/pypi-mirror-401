FROM python:3.11-slim

WORKDIR /app

# Install dependencies
COPY pyproject.toml ./
RUN pip install --no-cache-dir -e ".[crewai]"

# Copy application code
COPY codemode/ /app/codemode/
COPY examples/basic/ /app/

# Create outputs directory
RUN mkdir -p /outputs

EXPOSE 8000

CMD ["python", "app.py"]
