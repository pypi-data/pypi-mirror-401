{
  "$schema": "https://opencode.ai/config.json",

  "instructions": [
    "CLAUDE.md"
  ],

  "mcp": {
    "augment-context-engine": {
      "type": "local",
      "command": ["auggie", "--mcp"],
      "enabled": false
    },
    "playwright": {
      "type": "local",
      "command": ["npx", "-y", "@playwright/mcp@latest"],
      "enabled": false
    },
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "enabled": false
    }
  },

  "watcher": {
    "ignore": [
      ".sisyphus/**"
    ]
  }
}
