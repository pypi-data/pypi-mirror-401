{
"version": 1,
"disable_existing_loggers": false,
"formatters": {
    "simple": {
        "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
    },
    "test": {
        "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
        "datefmt": "%d/%m/%Y %I:%M:%S %p"
    }
},

"handlers": {

    "console": {
        "class": "logging.StreamHandler",
        "level": "DEBUG",
        "formatter": "test",
        "stream": "ext://sys.stdout"
    },
    "info_file_handler": {
        "class": "logging.handlers.RotatingFileHandler",
        "level": "INFO",
        "formatter": "simple",
        "filename": "info.log",
        "mode": "w",
        "maxBytes": 10485760,
        "backupCount": 40,
        "encoding": "utf8",
        "delay": true
    },
    "debug_file_handler": {
        "class": "logging.FileHandler",
        "level": "DEBUG",
        "formatter": "simple",
        "filename": "debug.log",
        "mode": "w",
        "encoding": "utf8",
        "delay": true
    },
    "error_file_handler": {
        "class": "logging.handlers.RotatingFileHandler",
        "level": "ERROR",
        "formatter": "simple",
        "filename": "errors.log",
        "mode": "w",
        "maxBytes": 10485760,
        "backupCount": 40,
        "encoding": "utf8",
        "delay": true
    }
},



"root": {
    "level": "INFO",
    "handlers": ["console"],
    "__handlers": ["debug_file_handler"]
}}
