{
  "mcpServers": {
    "awesome-copilot": {
      "type": "stdio",
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "ghcr.io/microsoft/mcp-dotnet-samples/awesome-copilot:latest"
      ]
    },
    "katana-erp": {
      "type": "stdio",
      "command": "uv",
      "args": [
        "run",
        "--directory",
        "katana_mcp_server",
        "katana-mcp-server"
      ]
    },
    "stocktrim": {
      "type": "stdio",
      "command": "uv",
      "args": [
        "run",
        "--directory",
        "../stocktrim-openapi-client/stocktrim_mcp_server",
        "stocktrim-mcp-server"
      ]
    }
  }
}
