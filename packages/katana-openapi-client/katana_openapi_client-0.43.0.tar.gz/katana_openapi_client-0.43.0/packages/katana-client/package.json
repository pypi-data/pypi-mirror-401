{
  "name": "katana-openapi-client",
  "version": "0.0.1",
  "description": "TypeScript client for Katana Manufacturing ERP API with automatic retries, rate limiting, and pagination",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./types": {
      "types": "./dist/types.d.ts",
      "import": "./dist/types.js",
      "require": "./dist/types.cjs"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "generate": "openapi-ts",
    "build": "tsup",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "biome check src tests",
    "lint:fix": "biome check --write src tests",
    "format": "biome format --write src tests",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "katana",
    "manufacturing",
    "erp",
    "api",
    "client",
    "openapi",
    "typescript"
  ],
  "author": "Doug Borg",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/dougborg/katana-openapi-client.git",
    "directory": "packages/katana-client"
  },
  "bugs": {
    "url": "https://github.com/dougborg/katana-openapi-client/issues"
  },
  "homepage": "https://github.com/dougborg/katana-openapi-client/tree/main/packages/katana-client#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@hey-api/openapi-ts": "^0.88.0",
    "@types/node": "^24.10.1",
    "@vitest/coverage-v8": "^4.0.15",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "vitest": "^4.0.15"
  },
  "sideEffects": false
}
