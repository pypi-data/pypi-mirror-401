{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "labels": [
    "dependencies"
  ],
  "schedule": [
    "before 9am on monday"
  ],
  "timezone": "UTC",
  "dependencyDashboard": true,
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": [
      "before 9am on monday"
    ]
  },
  "packageRules": [
    {
      "description": "Group all Rust dependencies",
      "matchManagers": [
        "cargo"
      ],
      "groupName": "rust dependencies"
    },
    {
      "description": "Group all Python dependencies",
      "matchManagers": [
        "pep621",
        "uv"
      ],
      "groupName": "python dependencies"
    },
    {
      "description": "Group GitHub Actions",
      "matchManagers": [
        "github-actions"
      ],
      "groupName": "github actions",
      "automerge": true
    },
    {
      "description": "Core framework deps - never automerge",
      "matchPackageNames": [
        "pyo3",
        "pyo3-async-runtimes",
        "actix-web",
        "actix-http",
        "tokio",
        "Django",
        "msgspec",
        "maturin"
      ],
      "labels": [
        "dependencies",
        "core"
      ],
      "automerge": false
    },
    {
      "description": "Major updates require manual review",
      "matchUpdateTypes": [
        "major"
      ],
      "labels": [
        "dependencies",
        "breaking"
      ],
      "automerge": false
    },
    {
      "description": "Minor and patch can automerge (except core)",
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true,
      "matchPackageNames": [
        "!pyo3",
        "!pyo3-async-runtimes",
        "!actix-web",
        "!actix-http",
        "!tokio",
        "!Django",
        "!msgspec",
        "!maturin"
      ]
    }
  ]
}
