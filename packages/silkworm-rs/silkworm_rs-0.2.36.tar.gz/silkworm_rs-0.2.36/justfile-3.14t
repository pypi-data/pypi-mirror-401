set shell := ["bash", "-eu", "-c"]

init: clean
	uv venv --clear --python 3.14t
	uv sync --group dev
	uv pip install uvloop

clean:
	just clean

demo:
	PYTHON_GIL=0 uv run python examples/lobsters_spider.py --pages 30
	PYTHON_GIL=0 uv run python examples/url_titles_spider.py --use_uvloop y --urls-file ./data/lobsters.jl --output data/url_titles.jl
