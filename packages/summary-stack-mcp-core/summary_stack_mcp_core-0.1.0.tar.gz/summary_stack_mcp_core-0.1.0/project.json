{
  "name": "summary_stack_mcp_core",
  "$schema": "../../../../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "projects/summary-stack/backend/summary_stack_mcp_core/summary_stack_mcp_core",
  "targets": {
    "lock": {
      "executor": "@nxlv/python:lock",
      "options": {
        "update": false
      }
    },
    "sync": {
      "executor": "@nxlv/python:sync",
      "options": {}
    },
    "add": {
      "executor": "@nxlv/python:add",
      "options": {}
    },
    "update": {
      "executor": "@nxlv/python:update",
      "options": {}
    },
    "remove": {
      "executor": "@nxlv/python:remove",
      "options": {}
    },
    "build": {
      "executor": "@nxlv/python:build",
      "outputs": ["{projectRoot}/dist"],
      "options": {
        "outputPath": "{projectRoot}/dist",
        "publish": false,
        "lockedVersions": false,
        "bundleLocalDependencies": true
      },
      "cache": true
    },
    "lint": {
      "executor": "@nxlv/python:run-commands",
      "options": {
        "command": "uv run ruff check .",
        "cwd": "{projectRoot}"
      },
      "cache": true
    },
    "test": {
      "executor": "@nxlv/python:run-commands",
      "outputs": [
        "{workspaceRoot}/reports/{projectRoot}/unittests",
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "command": "uv run pytest tests/",
        "cwd": "{projectRoot}"
      },
      "cache": true
    },
    "install": {
      "executor": "@nxlv/python:install",
      "options": {
        "silent": false,
        "args": "",
        "cacheDir": ".cache/pypoetry",
        "verbose": false,
        "debug": false
      }
    },
    "format": {
      "executor": "@nxlv/python:run-commands",
      "options": {
        "command": "uv run ruff check --fix . && uv run ruff format . && uv run mypy .",
        "cwd": "{projectRoot}"
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "options": {
        "command": "uv publish",
        "cwd": "{projectRoot}"
      }
    },
    "publish-test": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "options": {
        "command": "uv publish --publish-url https://test.pypi.org/legacy/",
        "cwd": "{projectRoot}"
      }
    }
  },
  "tags": ["scope:summary-stack", "type:library"],
  "release": {
    "version": {
      "generator": "@nxlv/python:release-version"
    }
  }
}
