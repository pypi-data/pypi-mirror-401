{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es2017",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "lib": [
            "es2017"
        ],
        "strict": true,
        "noImplicitAny": false,
        "esModuleInterop": true,
        "skipLibCheck": true
    },
    "include": [
        "nodes/**/*",
        "credentials/**/*"
    ]
}