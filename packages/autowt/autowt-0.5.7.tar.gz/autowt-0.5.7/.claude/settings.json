{
  "permissions": {
    "allow": [
      "Bash(uv:*)",
      "Bash(mise:*)"
    ],
    "deny": [
      "Bash(python:*)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "mise claude-hook-lint"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "uv run python .claude/hooks/validate-changelog.py"
          }
        ]
      }
    ]
  }
}