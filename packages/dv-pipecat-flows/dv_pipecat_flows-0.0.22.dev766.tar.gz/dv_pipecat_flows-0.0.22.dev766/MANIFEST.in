# Include essential files
include README.md
include LICENSE
include CHANGELOG.md
include pyproject.toml

# Include source code
recursive-include src *.py

# Exclude unnecessary files and directories
global-exclude *.pyc
global-exclude *.pyo
global-exclude __pycache__
global-exclude .DS_Store

# Exclude entire directories that shouldn't be in the package
prune ringg-bot
prune .github
prune docs
prune tests
prune examples
prune k8s
prune .venv
prune venv
prune dist
prune build

# Exclude large files
exclude *.whl
exclude *.kef
exclude *.dylib
