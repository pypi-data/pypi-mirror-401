# HydroNet Configuration
# Copy this file to .env and update values

# API Keys
NASA_EARTHDATA_USERNAME=your_username
NASA_EARTHDATA_PASSWORD=your_password
OPENWEATHER_API_KEY=your_api_key

# Database
DATABASE_URL=sqlite:///hydronet.db
# or for PostgreSQL:
# DATABASE_URL=postgresql://user:password@localhost/hydronet

# Model Parameters
PREDICTION_HORIZON=12  # months
NVI_THRESHOLD=0.6
CONFIDENCE_LEVEL=0.95

# Logging
LOG_LEVEL=INFO
LOG_FILE=hydronet.log

# Web Interface
HOST=0.0.0.0
PORT=5000
DEBUG=False
