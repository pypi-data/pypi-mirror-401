<!-- ================================= -->
<!-- |            CRUISE             | -->
<!-- ================================= -->

<block name="Hot_Cruise_North" ref="OBS">
	<metadata>
		<comment>This is the default pointing for the Hot Cruise with -Xsc pointed at the sun,</comment>
		<comment>the earth in the Xsc/Zsc plane and with +Ysc pointing towards the ecliptic north</comment>
		<comment>(should ensure Earth in the +Zsc side for the MGA)</comment>
		<planning isMaintenance="false" hasInternalSlews="false" allowAttitude="false" allowHgaRequest="false"/>
	</metadata>
	<attitude ref="track">
    	<boresight ref="SC_HGA" />
		<phaseAngle ref="align">
			<SCAxis frame="SC">
				<x>0.0</x>
				<y>1.0</y>
				<z>0.0</z>
			</SCAxis>
			<inertialAxis ref="SC2SunEarth"/>
		</phaseAngle>
		<target ref="Sun"/>
	</attitude>
</block>

<block name="Hot_Cruise_South" ref="OBS">
	<metadata>
		<comment>This is the default pointing for the Hot Cruise with -Xsc pointed at the sun,</comment>
		<comment>the earth in the Xsc/Zsc plane and with +Ysc pointing towards the ecliptic south</comment>
		<comment>(for solar conjunctions to ensure Earth in the +Zsc side for the MGA).</comment>
		<planning isMaintenance="false" hasInternalSlews="false" allowAttitude="false" allowHgaRequest="false"/>
	</metadata>
	<attitude ref="track">
    	<boresight ref="SC_HGA" />
		<phaseAngle ref="align">
			<SCAxis frame="SC">
				<x>0.0</x>
				<y>1.0</y>
				<z>0.0</z>
			</SCAxis>
			<inertialAxis ref="SC2SunEarth"/>
		</phaseAngle>
		<target ref="Sun"/>
	</attitude>
</block>


<block name="Cold_Cruise_North" ref="OBS">
	<metadata>
		<comment>This is the default pointing for the Cold Cruise with -Xsc pointed at the Earth, </comment>
		<comment>with +Ysc and the Sun direction are at 90 deg in such a way that +Ysc points </comment>
		<comment>towards the ecliptic north.</comment>
		<planning isMaintenance="false" hasInternalSlews="false" allowAttitude="false" allowHgaRequest="false"/>
	</metadata>
    <attitude ref="track">
    	<boresight ref="SC_HGA" />
		<phaseAngle ref="powerOptimised">
			<yDir> false </yDir>
		</phaseAngle>
		<target ref="Earth"/>
	</attitude>
</block>


<block name="Cold_Cruise_South" ref="OBS">
	<metadata>
		<comment>This is the default pointing for the Cold Cruise with -Xsc pointed at the Earth, </comment>
		<comment>with -Ysc and the Sun direction are at 90 deg with +Ysc pointing to the ecliptic south </comment>
		<comment>towards the ecliptic north.</comment>
		<planning isMaintenance="false" hasInternalSlews="false" allowAttitude="false" allowHgaRequest="false"/>
	</metadata>
    <attitude ref="track">
    	<boresight ref="SC_HGA" />
		<phaseAngle ref="powerOptimised">
			<yDir> true </yDir>
		</phaseAngle>
		<target ref="Earth"/>
	</attitude>
</block>


