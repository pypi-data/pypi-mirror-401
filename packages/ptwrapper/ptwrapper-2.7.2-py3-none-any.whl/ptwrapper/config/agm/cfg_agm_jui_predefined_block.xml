<!-- Wheels Off Loading Slot -->
<block name="MWOL" ref="OBS">
  <metadata>
    <comment>Wheel off-loading</comment>
    <planning resetWheelMomentum="true" isMaintenance="true" hasInternalSlews="true" allowAttitude="false" allowHgaRequest="false">
    	<intSlewDurationBefore units="min">30</intSlewDurationBefore>
    	<intSlewDurationAfter units="min">30</intSlewDurationAfter>
    </planning>
   </metadata>
   <attitude ref="track">
     <boresight ref="SC_Zaxis" />
     <target ref="Jupiter" />
     <phaseAngle ref="powerOptimised">
	   <yDir> false </yDir>
	 </phaseAngle>
 </attitude>
</block>

<!-- Downlink Slot -->
<block name="DL" ref="OBS">
  <metadata>
    <comment>HGA Downlink Slot</comment>
    <planning isMaintenance="false" hasInternalSlews="false" allowAttitude="true" allowHgaRequest="false" />
  </metadata>
  <attitude ref="track">
     <boresight ref="SC_HGA" />
     <phaseAngle ref="powerOptimised">
        <yDir> false </yDir>
        <angle units="deg"> 90 </angle>
     </phaseAngle>
     <target ref="Earth" />
  </attitude>
</block>


