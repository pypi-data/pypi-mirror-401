# plugins/example_logger.py
def init_plugin(core, config=None):
    print("[Logger Plugin] –ê–∫—Ç–∏–≤–∏—Ä–æ–≤–∞–Ω!")
    
    def log_handler(core, message, source):
        # –≠—Ç–∞ —Ñ—É–Ω–∫—Ü–∏—è –≤—ã–∑—ã–≤–∞–µ—Ç—Å—è –ø—Ä–∏ –∫–∞–∂–¥–æ–º –≤—Ö–æ–¥—è—â–µ–º —Å–æ–æ–±—â–µ–Ω–∏–∏
        sender = message.get("from", "??")
        content = message.get("content", str(message))
        print(f"[LOG] {sender}: {content}")
    
    # –ü–æ–¥–ø–∏—Å—ã–≤–∞–µ–º—Å—è –Ω–∞ –≤—Å–µ —Å–æ–æ–±—â–µ–Ω–∏—è
