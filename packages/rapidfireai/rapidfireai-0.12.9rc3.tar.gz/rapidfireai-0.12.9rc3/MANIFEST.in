# Include README and license files
include README.md
include LICENSE

# Include setup scripts
include setup/fit/start.sh
include setup/fit/start_dev.sh

# Include frontend resources
include rapidfireai/fit/frontend/server.py
include rapidfireai/fit/frontend/proxy_middleware.py
include rapidfireai/fit/frontend/build/**/*
include rapidfireai/fit/frontend/package.json

# Include Python modules - fit
recursive-include rapidfireai/fit/dispatcher *.py
recursive-include rapidfireai/fit/ml *.py
recursive-include rapidfireai/fit/automl *.py
recursive-include rapidfireai/fit/backend *.py
recursive-include rapidfireai/fit/db *.py *.sql
recursive-include rapidfireai/fit/utils *.py

# Include Python modules - evals
recursive-include rapidfireai/evals/actors *.py
recursive-include rapidfireai/evals/automl *.py
recursive-include rapidfireai/evals/data *.py
recursive-include rapidfireai/evals/db *.py *.sql
recursive-include rapidfireai/evals/dispatcher *.py
recursive-include rapidfireai/evals/metrics *.py
recursive-include rapidfireai/evals/rag *.py
recursive-include rapidfireai/evals/scheduling *.py
recursive-include rapidfireai/evals/utils *.py

# Include tutorial notebooks (including datasets)
recursive-include tutorial_notebooks *

# Explicitly exclude unwanted files and directories - be very specific
exclude rapidfireai/fit/frontend/node_modules
exclude rapidfireai/fit/frontend/node_modules/*
exclude rapidfireai/fit/frontend/.yarn
exclude rapidfireai/fit/frontend/.yarn/*
exclude rapidfireai/fit/frontend/dist
exclude rapidfireai/fit/frontend/dist/*
exclude rapidfireai/fit/frontend/coverage
exclude rapidfireai/fit/frontend/coverage/*
exclude rapidfireai/fit/frontend/.nyc_output
exclude rapidfireai/fit/frontend/.nyc_output/*
exclude rapidfireai/fit/frontend/.cache
exclude rapidfireai/fit/frontend/.cache/*
exclude rapidfireai/fit/frontend/.next
exclude rapidfireai/fit/frontend/.next/*
exclude rapidfireai/fit/frontend/out
exclude rapidfireai/fit/frontend/out/*
exclude rapidfireai/fit/frontend/.env*
exclude rapidfireai/fit/frontend/*.log

# Exclude common unwanted files
global-exclude *.pyc
global-exclude *.pyo
global-exclude *.pyd
global-exclude __pycache__
global-exclude *.so
global-exclude .DS_Store
global-exclude .git*
global-exclude .svn*
global-exclude *.egg-info
global-exclude .pytest_cache
global-exclude .coverage
global-exclude htmlcov
global-exclude .tox
global-exclude .venv
global-exclude venv
global-exclude venv311
