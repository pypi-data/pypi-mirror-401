# Dockerfile for test MCP provider
# Build: podman build -t mcp-test-provider -f Dockerfile.test-provider .
# Run: podman run -d --name mcp-test \
#        --label mcp.hangar.enabled=true \
#        --label mcp.hangar.name=mcp-test \
#        --label mcp.hangar.mode=stdio \
#        mcp-test-provider

FROM python:3.11-slim

WORKDIR /app

# Install MCP SDK
RUN pip install --no-cache-dir mcp

# Create simple MCP server
RUN cat > /app/server.py << 'EOF'
"""Simple MCP test server for container discovery testing."""
import asyncio
from mcp.server import Server
from mcp.server.stdio import stdio_server
from mcp.types import TextContent, Tool

app = Server("test-provider")

@app.list_tools()
async def list_tools():
    return [
        Tool(
            name="echo",
            description="Echo back the input message",
            inputSchema={
                "type": "object",
                "properties": {
                    "message": {"type": "string", "description": "Message to echo"}
                },
                "required": ["message"]
            }
        ),
        Tool(
            name="ping",
            description="Return pong",
            inputSchema={"type": "object", "properties": {}}
        )
    ]

@app.call_tool()
async def call_tool(name: str, arguments: dict):
    if name == "echo":
        return [TextContent(type="text", text=f"Echo: {arguments.get('message', '')}")]
    elif name == "ping":
        return [TextContent(type="text", text="pong")]
    raise ValueError(f"Unknown tool: {name}")

async def main():
    async with stdio_server() as (read_stream, write_stream):
        await app.run(read_stream, write_stream, app.create_initialization_options())

if __name__ == "__main__":
    asyncio.run(main())
EOF

# Default command - run MCP server via stdio
CMD ["python", "/app/server.py"]

