{
  "threshold": 5,
  "reporters": ["html", "console"],
  "ignore": [
    "node_modules/**",
    ".next/**",
    "coverage/**",
    "dist/**",
    "build/**",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ],
  "format": ["typescript", "javascript", "tsx", "jsx"],
  "minLines": 5,
  "minTokens": 50
}
