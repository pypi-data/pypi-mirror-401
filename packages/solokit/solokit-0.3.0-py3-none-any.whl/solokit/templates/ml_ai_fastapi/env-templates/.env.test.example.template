# Test Environment Variables
# Used for running tests (unit, integration, etc.)

# Application Configuration
APP_NAME={project_name}_test
APP_VERSION=0.1.0
DEBUG=False
ENVIRONMENT=test

# Server Configuration
HOST=localhost
PORT=8000

# Database Configuration (Use SQLite for tests or separate test DB)
DATABASE_URL=sqlite+aiosqlite:///./test.db
# Or use a separate PostgreSQL test database:
# DATABASE_URL=postgresql://postgres:postgres@localhost:5432/{project_name}_test

# Security (Test secret key - not used in production)
SECRET_KEY=test-secret-key-not-for-production
ALLOWED_HOSTS=localhost,127.0.0.1,testserver

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://testserver

# Logging
LOG_LEVEL=WARNING
LOG_FORMAT=json

# Redis (use separate DB for tests)
REDIS_URL=redis://localhost:6379/1

# API Keys (test keys)
API_KEY=test-api-key

# Disable external services in tests
SENTRY_DSN=
EMAIL_BACKEND=console

# AWS (use mock or test credentials)
# AWS_ACCESS_KEY_ID=test
# AWS_SECRET_ACCESS_KEY=test
# AWS_S3_BUCKET_NAME=test-bucket

# Test-specific settings
TESTING=True
