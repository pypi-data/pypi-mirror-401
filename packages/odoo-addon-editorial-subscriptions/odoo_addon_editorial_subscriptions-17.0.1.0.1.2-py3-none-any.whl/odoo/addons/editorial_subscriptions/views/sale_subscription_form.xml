<odoo>
    <record id="editorial_subscription_form_view" model="ir.ui.view">
        <field name="name">editorial.subscription.form.view</field>
        <field name="model">sale.subscription</field>
        <field name="inherit_id" ref="subscription_oca.sale_subscription_form"/>
        <field name="arch" type="xml">

            <xpath expr="//notebook" position="inside">
                <page string="Libros incluidos" name="books" autofocus="autofocus" invisible="not related_products">
                    <field name="related_products" readonly="true">
                        <kanban action="action_open_product" type="object" create="false" editable="false" edit="false" >
                            <templates>
                                <t t-name="kanban-box">
                                    <div>
                                        <div class="o_kanban_image">
                                            <img t-att-src="kanban_image('product.template', 'image_128', record.id.raw_value)" t-att-alt="record.name.value"/>
                                        </div>
                                        <div class="oe_kanban_details">
                                            <div class="o_kanban_record_headings">
                                                <strong class="o_kanban_record_title"><field name="name"/></strong>
                                            </div>
                                        </div>
                                    </div>
                                </t>
                            </templates>
                        </kanban>
                    </field>
                </page>
            </xpath>

        </field>
    </record>
</odoo>
