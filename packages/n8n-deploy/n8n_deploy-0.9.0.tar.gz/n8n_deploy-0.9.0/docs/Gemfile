source 'https://rubygems.org'

gem "jekyll", "~> 4.3"
gem "just-the-docs", "0.8.0"
gem "webrick", "~> 1.8"  # Required for Ruby 3.0+

# GitHub Pages plugins (for SEO and compatibility)
group :jekyll_plugins do
  gem "jekyll-default-layout"
  gem "jekyll-feed"
  gem "jekyll-seo-tag"
  gem "jekyll-sitemap"
  gem "jekyll-redirect-from"  # URL redirects
  gem "jekyll-mentions"       # @mentions support
  gem "jekyll-optional-front-matter"  # Front matter optional
  gem "jekyll-titles-from-headings"   # Auto titles from h1
end
