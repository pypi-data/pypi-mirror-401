# Include documentation
include README.md
include LICENSE.md
include requirements.txt

# Include web files from package
recursive-include cat/web *.html *.css *.js

# Include documentation and images from package
recursive-include cat/docs *.png *.jpg *.ico *.md

# Include data reference files from package
recursive-include cat/data *.csv

# Include scripts in package
recursive-include cat/scripts *.py

# Include development scripts at root (optional, for contributors)
recursive-include scripts *.py *.sh *.bat

# Exclude unnecessary files
global-exclude __pycache__
global-exclude *.py[co]
global-exclude .DS_Store
global-exclude *.swp
global-exclude .gitignore
global-exclude config.yaml