{
  "$schema": "https://schema.tauri.app/config/2",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },
  "productName": "FiberPath GUI",
  "version": "0.5.1",
  "identifier": "com.fiberpath.desktop",
  "bundle": {
    "active": true,
    "targets": [
      "nsis",
      "msi",
      "app",
      "dmg",
      "appimage",
      "deb"
    ],
    "resources": [
      "../bundled-cli/*"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/icon.ico"
    ]
  },
  "app": {
    "security": {
      "capabilities": ["default"]
    },
    "windows": [
      {
        "label": "main",
        "title": "FiberPath Desktop",
        "width": 1280,
        "height": 800
      }
    ]
  }
}
