<odoo>
<record id="crm_lead_ou" model="ir.rule">
    <field name="name">crm.lead - Responsible to operating unit data</field>
    <field name="model_id" ref="crm.model_crm_lead" />
    <field name="groups" eval="[(4, ref('crm_lead_operating_unit_group'))]" />
    <field
            name="domain_force"
        >[('operating_unit_id','in',[g.id for g in user.operating_unit_ids])]</field>
    <field name="perm_unlink" eval="1" />
    <field name="perm_write" eval="1" />
    <field name="perm_read" eval="1" />
    <field name="perm_create" eval="1" />
</record>
</odoo>
