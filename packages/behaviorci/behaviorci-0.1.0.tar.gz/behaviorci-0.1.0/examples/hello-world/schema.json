{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "QuestionAnswerResponse",
    "description": "Expected response format for question-answering tasks",
    "type": "object",
    "required": [
        "answer",
        "confidence"
    ],
    "properties": {
        "answer": {
            "type": "string",
            "minLength": 1,
            "description": "The answer to the question"
        },
        "confidence": {
            "type": "number",
            "minimum": 0,
            "maximum": 1,
            "description": "Confidence score from 0 to 1"
        }
    },
    "additionalProperties": false
}