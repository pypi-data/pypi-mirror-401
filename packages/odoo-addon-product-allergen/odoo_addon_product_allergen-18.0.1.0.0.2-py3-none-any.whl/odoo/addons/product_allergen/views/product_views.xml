<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- Extend Product Template Form View -->
    <record id="product_template_form_view_allergens" model="ir.ui.view">
        <field name="name">product.template.form.allergens</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//group[@name='group_general']" position="inside">
                <field name="allergen_ids" widget="many2many_tags" />
            </xpath>
        </field>
    </record>

    <!-- Extend Product Variant Form View -->
    <record id="product_variant_form_view_allergens" model="ir.ui.view">
        <field name="name">product.product.form.allergens</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//group[@name='group_general']" position="inside">
                <field name="allergen_ids" widget="many2many_tags" />
            </xpath>
        </field>
    </record>
</odoo>
