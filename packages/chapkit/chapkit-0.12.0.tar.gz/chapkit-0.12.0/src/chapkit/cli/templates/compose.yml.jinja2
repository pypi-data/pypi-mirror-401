services:
  api:
    build:
      context: .
      dockerfile: Dockerfile
    ports:
      - "8000:8000"
    volumes:
      - ck_{{ PROJECT_SLUG }}_data:/workspace/data
    environment:
      LOG_FORMAT: json
      LOG_LEVEL: INFO
      WORKERS: 1
    restart: unless-stopped
    healthcheck:
      test:
        [
          "CMD",
          "python",
          "-c",
          "import urllib.request; urllib.request.urlopen('http://localhost:8000/health').read()",
        ]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 40s
    networks:
      - ck_{{ PROJECT_SLUG }}

networks:
  ck_{{ PROJECT_SLUG }}:
    driver: bridge

volumes:
  ck_{{ PROJECT_SLUG }}_data:
