kind: Cluster
apiVersion: kind.x-k8s.io/v1alpha4
nodes:
- role: control-plane
- role: worker
  labels:
    # default tags that geneva looks for
    geneva.lancedb.com/ray-head: "true"
  extraMounts:
  - hostPath: /tmp
    containerPath: /host_tmp
- role: worker
  labels:
    # default tag that geneva looks for
    geneva.lancedb.com/ray-worker-cpu: "true"
  extraMounts:
  - hostPath: /tmp
    containerPath: /host_tmp
