# Include native libraries (for development wheels)
include src/biosparse/_binding/*.dll
include src/biosparse/_binding/*.so
include src/biosparse/_binding/*.dylib

# Include Rust source for source distributions
include Cargo.toml
include Cargo.lock
recursive-include src/rust *.rs

# Include documentation
include README.md
include LICENSE
recursive-include docs *.md
recursive-include tutorial *.md

# Exclude development/CI files
exclude .github
recursive-exclude .github *
exclude forks
recursive-exclude forks *
exclude benchmarks
recursive-exclude benchmarks *
exclude target
recursive-exclude target *
exclude tests
recursive-exclude tests *
