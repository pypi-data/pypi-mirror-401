# Include important files for PyPI distribution
include README.MD
include LICENSE
include pyproject.toml
include setup.py

# Include the main package
recursive-include ressmith *.py

# Include examples (but not in the installed package)
recursive-include examples *.py

# Exclude unnecessary files
global-exclude __pycache__
global-exclude *.py[co]
global-exclude .DS_Store
global-exclude *.so
global-exclude .git*
global-exclude .venv*
global-exclude *.png
global-exclude *.pth
global-exclude *.save
global-exclude *.egg-info
