<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
                             http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>io.github.marktsuchida</groupId>
    <artifactId>ihist</artifactId>
    <version>${revision}</version>
    <packaging>jar</packaging>

    <name>ihist</name>
    <description>Java bindings for ihist - Fast image histograms</description>
    <url>https://github.com/marktsuchida/ihist</url>

    <licenses>
        <license>
            <name>MIT</name>
            <url>https://github.com/marktsuchida/ihist/blob/main/LICENSE.txt</url>
            <distribution>repo</distribution>
        </license>
    </licenses>

    <developers>
        <developer>
            <id>marktsuchida</id>
            <name>Mark A. Tsuchida</name>
            <organization>University of Wisconsinâ€“Madison</organization>
        </developer>
    </developers>

    <scm>
        <url>https://github.com/marktsuchida/ihist</url>
        <connection>scm:git:https://github.com/marktsuchida/ihist.git</connection>
        <developerConnection>scm:git:git@github.com:marktsuchida/ihist.git</developerConnection>
    </scm>

    <properties>
        <!-- The source of truth for version is meson.build -->
        <revision>0.0.0-SNAPSHOT</revision>

        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <maven.compiler.source>1.8</maven.compiler.source>
        <maven.compiler.target>1.8</maven.compiler.target>
        <junit.version>5.14.1</junit.version>
        <argLine></argLine> <!-- combine jacoco and surefire args -->

        <meson.build.dir>../builddir-jni</meson.build.dir>

        <!-- Native library packaging configuration.
             Profiles are used to set the following properties based on the
             current JVM:
             - natives.os
             - natives.arch
             - native.library.prefix
             - native.library.suffix
             For a cross build, override all 4 of these properties from the
             command line. If you are building for the same OS but different
             architecture, you only need to set natives.arch.
        -->
        <natives.classifier>natives-${natives.os}-${natives.arch}</natives.classifier>
        <native.library.name>${native.library.prefix}ihistj${native.library.suffix}</native.library.name>
        <native.library.path>${meson.build.dir}/java/${native.library.name}</native.library.path>

        <!-- Set to true to skip natives JAR and build only the main JAR. -->
        <skip.natives>false</skip.natives>
    </properties>

    <dependencies>
        <dependency>
            <groupId>org.junit.jupiter</groupId>
            <artifactId>junit-jupiter-api</artifactId>
            <version>${junit.version}</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.junit.jupiter</groupId>
            <artifactId>junit-jupiter-engine</artifactId>
            <version>${junit.version}</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.junit.jupiter</groupId>
            <artifactId>junit-jupiter-params</artifactId>
            <version>${junit.version}</version>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <build>
        <sourceDirectory>src/main/java</sourceDirectory>
        <testSourceDirectory>src/test/java</testSourceDirectory>

        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-enforcer-plugin</artifactId>
                <version>3.6.2</version>
                <executions>
                    <execution>
                        <!-- Maven version requirement (setting this simplifies
                        the output of 'mvn versions:display-plugin-updates') -->
                        <id>enforce-maven</id>
                        <goals>
                            <goal>enforce</goal>
                        </goals>
                        <configuration>
                            <rules>
                                <requireMavenVersion>
                                    <version>3.6.3</version>
                                </requireMavenVersion>
                            </rules>
                        </configuration>
                    </execution>
                    <execution>
                        <id>enforce-platform-supported</id>
                        <phase>validate</phase>
                        <goals>
                            <goal>enforce</goal>
                        </goals>
                        <configuration>
                            <skip>${skip.natives}</skip>
                            <rules>
                                <requireProperty>
                                    <property>natives.os</property>
                                    <message>
Property natives.os is not set, probably because the OS could not be detected.
Set natives.os to a supported value: linux, macos, windows.
Also set native.library.prefix and native.library.suffix appropriately.
Set -Dskip.natives=true to build only the main JAR.
                                    </message>
                                </requireProperty>
                                <requireProperty>
                                    <property>natives.arch</property>
                                    <message>
Property natives.arch is not set, probably because it could not be detected.
Set natives.arch to a supported value: x86_64, arm64.
Set -Dskip.natives=true to build only the main JAR.
                                    </message>
                                </requireProperty>
                            </rules>
                        </configuration>
                    </execution>
                    <execution>
                        <id>enforce-native-library-exists</id>
                        <phase>prepare-package</phase>
                        <goals>
                            <goal>enforce</goal>
                        </goals>
                        <configuration>
                            <skip>${skip.natives}</skip>
                            <rules>
                                <requireFilesExist>
                                    <files>
                                        <file>${native.library.path}</file>
                                    </files>
                                    <message>
Native library not found: ${native.library.path}
Run the Meson build first:
    meson setup ${meson.build.dir}
    meson compile -C ${meson.build.dir}
Also check that native.library.prefix and native.library.suffix are correct.
Or set -Dskip.natives=true to build only the main JAR.
                                    </message>
                                </requireFilesExist>
                            </rules>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <!-- Source JAR -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-source-plugin</artifactId>
                <version>3.4.0</version>
                <executions>
                    <execution>
                        <id>attach-sources</id>
                        <goals>
                            <goal>jar-no-fork</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <!-- Javadoc JAR -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-javadoc-plugin</artifactId>
                <version>3.12.0</version>
                <executions>
                    <execution>
                        <id>attach-javadocs</id>
                        <goals>
                            <goal>jar</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <!-- Clean natives staging to remove stale libraries from previous
                 builds -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-clean-plugin</artifactId>
                <version>3.5.0</version>
                <executions>
                    <execution>
                        <id>clean-natives-staging</id>
                        <phase>prepare-package</phase>
                        <goals>
                            <goal>clean</goal>
                        </goals>
                        <configuration>
                            <excludeDefaultDirectories>true</excludeDefaultDirectories>
                            <filesets>
                                <fileset>
                                    <directory>${project.build.directory}/natives-staging</directory>
                                </fileset>
                            </filesets>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <!-- Stage native library for packaging -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-resources-plugin</artifactId>
                <version>3.4.0</version>
                <executions>
                    <execution>
                        <id>stage-native-library</id>
                        <phase>prepare-package</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <skip>${skip.natives}</skip>
                            <outputDirectory>${project.build.directory}/natives-staging/natives/${natives.os}/${natives.arch}</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>${meson.build.dir}/java</directory>
                                    <includes>
                                        <include>${native.library.name}</include>
                                    </includes>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <!-- Package main and natives JARs -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <version>3.5.0</version>
                <executions>
                    <execution>
                        <id>main-jar</id>
                        <configuration>
                            <archive>
                                <manifestEntries>
                                    <Automatic-Module-Name>io.github.marktsuchida.ihist</Automatic-Module-Name>
                                </manifestEntries>
                            </archive>
                        </configuration>
                    </execution>
                    <execution>
                        <id>natives-jar</id>
                        <phase>package</phase>
                        <goals>
                            <goal>jar</goal>
                        </goals>
                        <configuration>
                            <skipIfEmpty>true</skipIfEmpty>
                            <classifier>${natives.classifier}</classifier>
                            <classesDirectory>${project.build.directory}/natives-staging</classesDirectory>
                            <includes>
                                <include>natives/**</include>
                            </includes>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <!-- Remove build-specific elements from published POM (probably
                 less confusing to consumers) -->
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>flatten-maven-plugin</artifactId>
                <version>1.7.3</version>
                <configuration>
                    <flattenMode>oss</flattenMode>
                </configuration>
                <executions>
                    <execution>
                        <id>flatten</id>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>flatten</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>flatten-clean</id>
                        <phase>clean</phase>
                        <goals>
                            <goal>clean</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <!-- Unit tests -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>3.5.4</version>
                <configuration>
                    <argLine>@{argLine} -Djava.library.path=${native.library.path}</argLine>
                </configuration>
            </plugin>

            <!-- Integration tests (run after packaging) -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-failsafe-plugin</artifactId>
                <version>3.5.4</version>
                <configuration>
                    <skip>${skip.natives}</skip>
                    <additionalClasspathElements>
                        <additionalClasspathElement>
                            ${project.build.directory}/${project.artifactId}-${project.version}-${natives.classifier}.jar
                        </additionalClasspathElement>
                    </additionalClasspathElements>
                </configuration>
                <executions>
                    <execution>
                        <goals>
                            <goal>integration-test</goal>
                            <goal>verify</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <!-- Coverage -->
            <plugin>
                <groupId>org.jacoco</groupId>
                <artifactId>jacoco-maven-plugin</artifactId>
                <version>0.8.14</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>prepare-agent</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>report</id>
                        <phase>test</phase>
                        <goals>
                            <goal>report</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <profiles>
        <!-- OS mapping profiles -->
        <profile>
            <id>natives-os-linux</id>
            <activation>
                <os><name>Linux</name></os>
            </activation>
            <properties>
                <natives.os>linux</natives.os>
                <native.library.prefix>lib</native.library.prefix>
                <native.library.suffix>.so</native.library.suffix>
            </properties>
        </profile>
        <profile>
            <id>natives-os-macos</id>
            <activation>
                <os><family>mac</family></os>
            </activation>
            <properties>
                <natives.os>macos</natives.os>
                <native.library.prefix>lib</native.library.prefix>
                <native.library.suffix>.dylib</native.library.suffix>
            </properties>
        </profile>
        <profile>
            <id>natives-os-windows</id>
            <activation>
                <os><family>windows</family></os>
            </activation>
            <properties>
                <natives.os>windows</natives.os>
                <native.library.prefix></native.library.prefix>
                <native.library.suffix>.dll</native.library.suffix>
            </properties>
        </profile>

        <!-- Architecture mapping profiles -->
        <profile>
            <!-- x86_64 is usually 'amd64' -->
            <id>natives-arch-amd64</id>
            <activation>
                <os><arch>amd64</arch></os>
            </activation>
            <properties>
                <natives.arch>x86_64</natives.arch>
            </properties>
        </profile>
        <profile>
            <!-- But JDK on Intel macOS usually has 'x86_64' -->
            <id>natives-arch-x86_64</id>
            <activation>
                <os><arch>x86_64</arch></os>
            </activation>
            <properties>
                <natives.arch>x86_64</natives.arch>
            </properties>
        </profile>
        <profile>
            <!-- 64-bit ARM is almost always 'aarch64' -->
            <id>natives-arch-aarch64</id>
            <activation>
                <os><arch>aarch64</arch></os>
            </activation>
            <properties>
                <natives.arch>arm64</natives.arch>
            </properties>
        </profile>
    </profiles>
</project>
