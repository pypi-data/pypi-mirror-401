# .env.example
# Configuration for nonebot-plugin-tavily

# Tavily API Key (Required)
# Get your key from https://tavily.com/
TAVILY_API_KEY=tvly-xxxxxxxxxxxxxxxx

# Default Search Depth (optional)
# Options: basic, advanced
# Default: basic
TAVILY_DEFAULT_DEPTH=basic

# Maximum Breadth for Crawling (optional)
TAVILY_MAX_BREADTH=10

# Maximum Search Results (optional)
TAVILY_MAX_RESULTS=5

# Default Time Range (optional)
# Options: day, week, month, year (empty = no filter)
TAVILY_TIME_RANGE=

# Simple Mode (optional)
# true: Output content only (no title/URL)
# false: Full output with title, content, URL
# Default: false
TAVILY_SIMPLE_MODE=false

# Content Truncation Limits (optional)
# Maximum characters to show for each type of output
TAVILY_SEARCH_TRUNCATE=200
TAVILY_EXTRACT_TRUNCATE=2000
TAVILY_CRAWL_TRUNCATE=150
