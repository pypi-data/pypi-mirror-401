{
  "permissions": {
    "allow": [
      "Bash(pytest:*)",
      "Bash(make:*)"
    ],
    "deny": [
      "Edit(CHANGELOG.md)",
      "Write(CHANGELOG.md)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "make quality",
            "timeout": 5
          }
        ]
      }
    ]
  }
}
