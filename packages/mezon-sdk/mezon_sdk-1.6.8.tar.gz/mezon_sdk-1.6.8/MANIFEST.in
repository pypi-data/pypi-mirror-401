# Include important files
include README.md
include LICENSE
include pyproject.toml

# Include the mezon package
recursive-include mezon *.py
recursive-include mezon *.pyi
recursive-include mezon/protobuf *.py

# Exclude tests and scripts from source distribution
prune tests
prune scripts
global-exclude __pycache__
global-exclude *.py[co]
global-exclude .DS_Store

# Exclude development files
exclude .gitignore
exclude .env
exclude .env.*
exclude fastapi_example.py
