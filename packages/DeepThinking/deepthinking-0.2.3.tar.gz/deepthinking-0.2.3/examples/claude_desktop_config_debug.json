{
  "$schema": "../schemas/mcp-server-config.schema.json",
  "description": "Claude Desktop 配置示例 - 调试模式（启用详细日志）",
  "mcpServers": {
    "deep-thinking": {
      "command": "python",
      "args": [
        "-m",
        "deep_thinking",
        "--mode",
        "stdio",
        "--log-level",
        "DEBUG"
      ],
      "env": {
        "DEEP_THINKING_LOG_LEVEL": "DEBUG"
      }
    }
  }
}
