    padding: 0 1 0 0;
}

#stream_detail_container {
    width: 1fr;
    height: 100%;
    padding: 0 0 0 1;
}

/* Stream list styling */
StreamList {
    border: round $primary;
    background: $surface;
}

/* Stream detail styling */
StreamDetail {
    border: round $primary;
    background: $surface;
    padding: 1;
}

/* Create stream dialog */
