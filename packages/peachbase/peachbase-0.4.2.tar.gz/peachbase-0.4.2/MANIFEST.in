# Include documentation files
include README.md
include LICENSE
include docs/changelog.md
include docs/contributing.md

# Include C source files for compilation
recursive-include csrc *.c *.h

# Include examples
recursive-include examples *.py

# Exclude unnecessary files from source distribution
global-exclude __pycache__
global-exclude *.py[co]
global-exclude .DS_Store
global-exclude *.so
global-exclude *.pyd
