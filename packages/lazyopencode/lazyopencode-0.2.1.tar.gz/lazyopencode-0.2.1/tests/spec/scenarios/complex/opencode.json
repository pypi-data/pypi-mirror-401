{
    "$schema": "https://opencode.ai/config.json",
    "instructions": [
        "docs/*.md"
    ],
    "agent": {
        "inline-auditor": {
            "description": "Inline security auditor agent",
            "mode": "subagent",
            "prompt": "{file:./prompts/auditor.txt}",
            "tools": {
                "write": false
            }
        }
    },
    "command": {
        "inline-echo": {
            "template": "Echo: $ARGUMENTS",
            "description": "Simple echo command"
        },
        "inline-build": {
            "template": "Run the build process for the project.",
            "description": "Build the project",
            "agent": "plan"
        }
    },
    "mcp": {
        "sqlite": {
            "type": "local",
            "command": ["uvx", "mcp-server-sqlite"],
            "enabled": true
        },
        "filesystem": {
            "type": "local",
            "command": ["npx", "-y", "@modelcontextprotocol/server-filesystem"],
            "enabled": true
        }
    }
}
